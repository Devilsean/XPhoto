<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 1. 通用设置 -->
    <PreferenceCategory app:title="通用设置">

        <ListPreference
            app:key="theme"
            app:title="界面/主题选择"
            app:summary="%s"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values" />

        <ListPreference
            app:key="language"
            app:title="语言设置"
            app:summary="%s"
            app:defaultValue="system"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values" />

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="通知管理"
            app:summaryOn="已开启"
            app:summaryOff="已关闭"
            app:defaultValue="true" />

        <ListPreference
            app:key="startup_action"
            app:title="启动设置"
            app:summary="%s"
            app:defaultValue="home"
            app:entries="@array/startup_action_entries"
            app:entryValues="@array/startup_action_values" />

    </PreferenceCategory>

    <!-- 2. 编辑与性能配置 -->
    <PreferenceCategory app:title="编辑与性能配置">

        <Preference
            app:key="export_settings"
            app:title="默认导出设置"
            app:summary="格式、质量、分辨率" />

        <EditTextPreference
            app:key="history_depth"
            app:title="历史记录深度"
            app:summary="当前: %s 步"
            app:defaultValue="50"
            app:dialogTitle="设置撤销步数" />

        <SwitchPreferenceCompat
            app:key="non_destructive_editing"
            app:title="非破坏性编辑"
            app:summary="所有修改将作为独立步骤存储"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="watermark"
            app:title="显示水印"
            app:defaultValue="false" />

    </PreferenceCategory>

    <!-- 3. 数据与存储管理 -->
    <PreferenceCategory app:title="数据与存储管理">

        <Preference
            app:key="storage_path"
            app:title="本地存储路径"
            app:summary="/storage/emulated/0/Pictures/MyApp" />

        <Preference
            app:key="clear_cache"
            app:title="清理缓存"
            app:summary="当前缓存: 128 MB" />

        <ListPreference
            app:key="autosave_frequency"
            app:title="草稿自动保存频率"
            app:summary="%s"
            app:defaultValue="5"
            app:entries="@array/autosave_entries"
            app:entryValues="@array/autosave_values" />

    </PreferenceCategory>

    <!-- 4. 账户与隐私 -->
    <PreferenceCategory app:title="账户与隐私">

        <Preference
            app:key="edit_profile"
            app:title="编辑个人信息" />

        <Preference
            app:key="change_password"
            app:title="修改密码" />

        <Preference
            app:key="privacy_policy"
            app:title="隐私政策与协议" />

        <Preference
            app:key="about_us"
            app:title="关于我们"
            app:summary="版本 1.0.0" />

        <Preference
            app:key="logout"
            app:title="退出登录" >
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>