<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 1. 外观与语言 -->
    <PreferenceCategory
        android:title="@string/settings_appearance_language">

        <ListPreference
            android:key="theme"
            android:title="@string/settings_theme"
            android:summary="@string/settings_theme_summary"
            android:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values" />

        <ListPreference
            android:key="language"
            android:title="@string/settings_language"
            android:summary="@string/settings_language_summary"
            android:defaultValue="system"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values" />

    </PreferenceCategory>

    <!-- 2. 通知与缓存 -->
    <PreferenceCategory
        android:title="@string/settings_notification_cache">

        <Preference
            android:key="notifications"
            android:title="@string/settings_notifications"
            android:summary="@string/settings_notifications_summary" />

        <Preference
            android:key="clear_cache"
            android:title="@string/settings_clear_cache"
            android:summary="@string/settings_clear_cache_summary" />

    </PreferenceCategory>

    <!-- 3. 数据管理 -->
    <PreferenceCategory
        android:title="@string/settings_data_management">

        <Preference
            android:key="clear_all_data"
            android:title="@string/settings_clear_all_data"
            android:summary="@string/settings_clear_all_data_summary" />

    </PreferenceCategory>

    <!-- 4. 关于与隐私 -->
    <PreferenceCategory
        android:title="@string/settings_about_privacy">

        <Preference
            android:key="privacy_policy"
            android:title="@string/settings_privacy_policy"
            android:summary="@string/settings_privacy_policy_summary" />

        <Preference
            android:key="about_us"
            android:title="@string/settings_about"
            android:summary="@string/settings_about_summary" />

    </PreferenceCategory>

</PreferenceScreen>
