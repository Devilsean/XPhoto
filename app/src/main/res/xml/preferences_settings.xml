<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 1. 外观与语言 -->
    <PreferenceCategory
        android:title="外观与语言">

        <ListPreference
            android:key="theme"
            android:title="主题模式"
            android:summary="浅色 / 深色 / 跟随系统"
            android:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values" />

        <ListPreference
            android:key="language"
            android:title="语言"
            android:summary="切换应用显示语言"
            android:defaultValue="system"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values" />

    </PreferenceCategory>

    <!-- 2. 通知与缓存 -->
    <PreferenceCategory
        android:title="通知与缓存">

        <Preference
            android:key="notifications"
            android:title="通知管理"
            android:summary="跳转到系统通知设置" />

        <Preference
            android:key="clear_cache"
            android:title="清理缓存"
            android:summary="清理临时文件，释放存储空间" />

    </PreferenceCategory>

    <!-- 3. 数据管理 -->
    <PreferenceCategory
        android:title="数据管理">

        <Preference
            android:key="clear_all_data"
            android:title="清除所有数据"
            android:summary="清除草稿、作品、个人信息和设置偏好" />

    </PreferenceCategory>

    <!-- 3. 关于与隐私 -->
    <PreferenceCategory
        android:title="关于与隐私">

        <Preference
            android:key="privacy_policy"
            android:title="隐私政策"
            android:summary="查看隐私政策网页" />

        <Preference
            android:key="about_us"
            android:title="关于应用"
            android:summary="版本 1.0.0 · 醒图安卓训练营" />

    </PreferenceCategory>

</PreferenceScreen>
