<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 顶部白色渐变 -->
    <item android:bottom="170dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#FFFFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- 底部白色渐变 -->
    <item android:top="170dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FFFFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- 左侧白色渐变 -->
    <item android:right="330dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#FFFFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- 右侧白色渐变 -->
    <item android:left="330dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#FFFFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>