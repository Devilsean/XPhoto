<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- 1. 顶部视觉焦点 (轮播图) -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/carousel_view_pager"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 2. 核心操作入口 (相机 & 相册) -->
        <LinearLayout
            android:id="@+id/primary_actions_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/carousel_view_pager"
            app:layout_constraintStart_toStartOf="@id/carousel_view_pager"
            app:layout_constraintTop_toBottomOf="@id/carousel_view_pager">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_launch_camera"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp">
                <!-- 卡片内容：相机 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_camera"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="打开相机"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_import_gallery"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp">
                <!-- 卡片内容：相册 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_gallery"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="从相册导入"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- 3. 常用功能快捷入口 (网格) -->
        <TextView
            android:id="@+id/quick_access_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="常用功能"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/primary_actions_layout"
            app:layout_constraintTop_toBottomOf="@id/primary_actions_layout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/quick_access_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/primary_actions_layout"
            app:layout_constraintStart_toStartOf="@id/primary_actions_layout"
            app:layout_constraintTop_toBottomOf="@id/quick_access_title"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:spanCount="4"
            tools:listitem="@layout/item_quick_access" /> <!-- 稍后创建这个 item 布局 -->

        <!-- 4. 作品/草稿快捷入口 -->
        <TextView
            android:id="@+id/drafts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="最近编辑"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/quick_access_recycler_view"
            app:layout_constraintTop_toBottomOf="@id/quick_access_recycler_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/drafts_recycler_view"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/drafts_title"
            app:layout_constraintTop_toBottomOf="@id/drafts_title"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_draft" /> <!-- 稍后创建这个 item 布局 -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>