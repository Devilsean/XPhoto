<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348">

        <FrameLayout
            android:id="@+id/fl_hollow_x"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splash_x_filled" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_x_vector"
                app:tint="@android:color/white" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Photo"
            android:textColor="@color/splash_text_primary"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fl_hollow_x"
            app:layout_constraintStart_toEndOf="@+id/fl_hollow_x"
            app:layout_constraintTop_toTopOf="@+id/fl_hollow_x" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Capture. Create. Perfect."
        android:textColor="@color/splash_text_primary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_title" />

    <ImageView
        android:id="@+id/iv_crop"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:src="@drawable/ic_crop_vector"
        app:layout_constraintBottom_toTopOf="@+id/cl_title"
        app:layout_constraintEnd_toEndOf="@+id/cl_title"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491" />

    <ImageView
        android:id="@+id/iv_palette"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_palette_vector"
        app:layout_constraintBottom_toTopOf="@+id/cl_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cl_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821" />

    <ImageView
        android:id="@+id/iv_cutout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_cutout_vector"
        app:layout_constraintBottom_toBottomOf="@+id/tv_slogan"
        app:layout_constraintEnd_toStartOf="@+id/cl_title"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cl_title"
        app:layout_constraintVertical_bias="0.393" />

    <ImageView
        android:id="@+id/iv_eraser"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_eraser_vector"
        app:layout_constraintBottom_toTopOf="@+id/iv_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cl_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_slogan"
        app:layout_constraintVertical_bias="0.431" />

    <ImageView
        android:id="@+id/iv_filter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_wand_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cl_title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_slogan"
        app:layout_constraintVertical_bias="0.288" />

    <ImageView
        android:id="@+id/iv_text"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_text_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cl_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_slogan"
        app:layout_constraintVertical_bias="0.464" />

    <ImageView
        android:id="@+id/iv_beauty"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_beauty_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_filter"
        app:layout_constraintVertical_bias="0.356" />
</androidx.constraintlayout.widget.ConstraintLayout>