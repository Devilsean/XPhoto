<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp" />

    <!-- 存储位置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storage_path"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tv_storage_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp"
            android:ellipsize="middle"
            android:singleLine="true" />

    </LinearLayout>

    <!-- 时间信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_time"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- 分辨率 -->
    <LinearLayout
        android:id="@+id/layout_resolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resolution"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tv_resolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- 文件大小 -->
    <LinearLayout
        android:id="@+id/layout_file_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_size"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- 文件格式 -->
    <LinearLayout
        android:id="@+id/layout_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_format"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tv_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- 关闭按钮 -->
    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/close"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary" />

</LinearLayout>