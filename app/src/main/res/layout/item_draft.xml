<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#1A1A1A">

    <!-- 9:16 比例容器，使用 constraintDimensionRatio 实现 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fl_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A1A1A">

        <!-- 9:16 比例占位视图 -->
        <View
            android:id="@+id/ratio_spacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="9:16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 图片使用 fitCenter 实现 Letterboxing 效果 -->
        <ImageView
            android:id="@+id/iv_draft_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:background="#1A1A1A"
            app:layout_constraintTop_toTopOf="@id/ratio_spacer"
            app:layout_constraintBottom_toBottomOf="@id/ratio_spacer"
            app:layout_constraintStart_toStartOf="@id/ratio_spacer"
            app:layout_constraintEnd_toEndOf="@id/ratio_spacer" />

        <!-- 选中遮罩层 -->
        <View
            android:id="@+id/selection_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#4D000000"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 选择复选框 -->
        <ImageView
            android:id="@+id/iv_selection_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_check"
            android:background="@drawable/bg_avatar_circle"
            android:backgroundTint="?attr/colorPrimary"
            android:padding="4dp"
            app:tint="@android:color/white"
            android:visibility="gone"
            android:contentDescription="已选择"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 收藏标识 -->
        <ImageView
            android:id="@+id/iv_favorite_badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_heart_full"
            app:tint="#FF4081"
            android:visibility="gone"
            android:contentDescription="已收藏"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>