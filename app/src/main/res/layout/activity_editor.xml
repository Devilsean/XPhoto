<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditorActivity">

    <!-- 顶部工具栏 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_toolbar_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fitsSystemWindows="true"
        app:cardBackgroundColor="#80000000"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- 返回按钮 -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="返回"
                android:tint="@color/white" />

            <!-- 标题 -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="图片编辑"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <!-- 撤销按钮 -->
            <ImageButton
                android:id="@+id/undo_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back_up"
                android:contentDescription="撤销"
                android:tint="@color/white"
                android:layout_marginEnd="8dp" />

            <!-- 重做按钮 -->
            <ImageButton
                android:id="@+id/redo_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_forward_up"
                android:contentDescription="重做"
                android:tint="@color/white" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 裁剪框覆盖层 -->
    <com.example.myapplication.ui.widget.CropOverlayView
        android:id="@+id/crop_overlay_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 比例选择器容器 -->
    <HorizontalScrollView
        android:id="@+id/aspect_ratio_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/crop_action_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/aspect_ratio_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <Button
                android:id="@+id/ratio_free"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="自由"
                android:textSize="12sp" />

            <Button
                android:id="@+id/ratio_1_1"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="1:1"
                android:textSize="12sp" />

            <Button
                android:id="@+id/ratio_3_4"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="3:4"
                android:textSize="12sp" />

            <Button
                android:id="@+id/ratio_4_3"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="4:3"
                android:textSize="12sp" />

            <Button
                android:id="@+id/ratio_9_16"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="9:16"
                android:textSize="12sp" />

            <Button
                android:id="@+id/ratio_16_9"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:9"
                android:textSize="12sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 裁剪操作按钮（使用卡片背景） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crop_action_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/editor_button_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/crop_action_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/crop_reset_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="重置"
                android:textColor="@color/white"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/crop_rotate_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="旋转"
                android:textColor="@color/white"
                app:icon="@drawable/ic_rotate"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/white"
                app:strokeColor="@color/white_alpha_70" />

            <Button
                android:id="@+id/crop_cancel_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="取消"
                android:textColor="@color/white"
                app:icon="@drawable/ic_x_vector"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/white"
                app:strokeColor="@color/white_alpha_70" />

            <Button
                android:id="@+id/crop_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconPadding="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 编辑器主按钮（使用卡片背景） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editor_button_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/editor_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/crop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="裁剪"
                app:icon="@drawable/ic_crop_vector"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/grayscale_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="灰度"
                app:icon="@drawable/ic_palette_vector"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/export_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出"
                app:icon="@drawable/ic_filter_vector"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
