<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.EditorActivity">

    <!-- 画布区域 - GLSurfaceView -->
    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 裁剪框覆盖层 -->
    <com.example.myapplication.ui.widget.CropOverlayView
        android:id="@+id/crop_overlay_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 顶部工具栏 - 简洁半透明设计 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_toolbar_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- 返回按钮 -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back"
                app:tint="@color/white"
                android:padding="8dp" />

            <!-- 标题 -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

            <!-- 撤销按钮 -->
            <ImageButton
                android:id="@+id/undo_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back_up"
                android:contentDescription="@string/undo"
                app:tint="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="4dp" />

            <!-- 重做按钮 -->
            <ImageButton
                android:id="@+id/redo_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_forward_up"
                android:contentDescription="@string/redo"
                app:tint="@color/white"
                android:padding="8dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
<!--滤镜选择器 -滤镜模式专用 -->
    <HorizontalScrollView
        android:id="@+id/filter_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/bottom_toolbar_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"><androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </HorizontalScrollView>
<!-- 调整面板 - 调整模式专用 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/adjustment_panel_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/color_overlay_dark"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_toolbar_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="400dp"
        app:layout_constraintTop_toBottomOf="@id/top_toolbar_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 调整面板标题栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tool_adjust"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- 重置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/adjustment_reset_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reset"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <!-- 关闭按钮 -->
                <ImageButton
                    android:id="@+id/adjustment_close_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_x_vector"
                    app:tint="@color/white"
                    android:contentDescription="@string/close"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_alpha_30" />

            <!-- 调整项列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/adjustment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 比例选择器 -裁剪模式专用 -->
    <HorizontalScrollView
        android:id="@+id/aspect_ratio_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/crop_action_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/aspect_ratio_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/ratio_free"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratio_free"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/color_overlay_dark" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ratio_1_1"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/color_overlay_dark" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ratio_3_4"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:4"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/color_overlay_dark" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ratio_4_3"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:3"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/color_overlay_dark" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ratio_9_16"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:16"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/color_overlay_dark" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ratio_16_9"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:9"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/color_overlay_dark" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- 裁剪操作工具栏 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crop_action_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/color_overlay_dark"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_toolbar_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- 重置按钮 -->
            <ImageButton
                android:id="@+id/crop_reset_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_refresh"
                app:tint="@color/white"
                android:contentDescription="@string/reset"
                android:scaleType="centerInside"
                android:padding="12dp" />

            <!-- 旋转按钮 -->
            <ImageButton
                android:id="@+id/crop_rotate_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_rotate"
                app:tint="@color/white"
                android:contentDescription="@string/rotate"
                android:scaleType="centerInside"
                android:padding="12dp" />

            <!-- 分隔线 -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/white_alpha_70"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- 取消按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/crop_cancel_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- 确认按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/crop_confirm_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/done"
                android:textSize="14sp"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconPadding="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 底部主工具栏 - 专业设计 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_toolbar_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- 裁剪工具 -->
            <LinearLayout
                android:id="@+id/crop_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_crop_vector"
                    app:tint="@color/white"
                    android:contentDescription="@string/tool_crop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/tool_crop"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!--滤镜工具 -->
            <LinearLayout
                android:id="@+id/filter_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_filter_vector"
                    app:tint="@color/white"
                    android:contentDescription="@string/tool_filter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/tool_filter"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- 调整工具 -->
            <LinearLayout
                android:id="@+id/adjust_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_palette_vector"
                    app:tint="@color/white"
                    android:contentDescription="@string/tool_adjust" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/tool_adjust"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- 逆时针旋转工具 -->
            <LinearLayout
                android:id="@+id/rotate_left_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_rotate"
                    android:scaleX="-1"
                    app:tint="@color/white"
                    android:contentDescription="@string/rotate_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/rotate_left"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- 顺时针旋转工具 -->
            <LinearLayout
                android:id="@+id/rotate_right_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_rotate"
                    app:tint="@color/white"
                    android:contentDescription="@string/rotate_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/rotate_right"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/white_alpha_70"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- 保存按钮 - 保存为作品（草稿自动保存，点击此按钮将草稿转化为作品） -->
            <LinearLayout
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_save"
                    app:tint="?attr/colorPrimary"
                    android:contentDescription="@string/save" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/save"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="11sp" />
            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 隐藏的灰度按钮（保持兼容性）-->
    <Button
        android:id="@+id/grayscale_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
