<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!--夜间模式 - 主色调（更亮的粉红色系） -->
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorOnPrimary">@color/dark_color_on_primary</item>
        <item name="colorPrimaryContainer">@color/dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/dark_onPrimaryContainer</item>
        <!-- 次要色-->
        <item name="colorSecondary">@color/dark_color_secondary</item>
        <item name="colorOnSecondary">@color/dark_color_on_secondary</item>

        <!-- 背景色 - 深色 -->
        <item name="android:colorBackground">@color/dark_color_bg</item>
        <item name="colorOnBackground">@color/dark_color_text_primary</item>
        
        <!-- 表面色 -->
        <item name="colorSurface">@color/dark_color_surface</item>
        <item name="colorOnSurface">@color/dark_color_text_primary</item>
        <item name="colorSurfaceVariant">@color/dark_color_border_light</item>
        <item name="colorOnSurfaceVariant">@color/dark_color_text_secondary</item>

        <!-- 状态栏和导航栏颜色 -->
        <item name="android:statusBarColor">@color/dark_color_bg</item>
        <item name="android:navigationBarColor">@color/dark_color_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <!-- 夜间模式 - 全屏无ActionBar主题 -->
    <style name="Theme.MyApplication.NoActionBar" parent="Base.Theme.MyApplication">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/color_overlay_black</item>
        <item name="android:navigationBarColor">@color/color_overlay_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>